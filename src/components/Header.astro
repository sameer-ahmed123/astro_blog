<style>
  .tooltip-container {
    position: relative; /* Required for absolute positioning of tooltip */
  }

  .tooltip-trigger:hover .tooltip-text {
    opacity: 1;
    pointer-events: auto; /* Allow interaction when visible */
  }

  .tooltip-text {
    opacity: 0;
    pointer-events: none; /* Prevent interaction when hidden */
    transition: opacity 0.4s ease-in-out; /* Smooth transition */
    position: absolute;
    top: 60px; /* Adjust as needed for positioning */
    left: 20%;
    transform: translateX(-50%);
    background-color: rgba(0, 0, 0, 0.8);
    color: white;
    padding: 5px 5px;
    border-radius: 4px;
    white-space: nowrap;
    font-size: 14px; /* Prevent long text from wrapping */
  }

  header {
    margin: 0;
    padding: 0 1em;
    background: white;
    box-shadow: 0 2px 8px rgba(var(--black), 5%);
  }
  h2 {
    margin: 0;
    font-size: 1em;
  }

  h2 a,
  h2 a.active {
    text-decoration: none;
  }
  nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  nav a {
    padding: 1em 0.5em;
    color: var(--black);
    border-bottom: 4px solid transparent;
    text-decoration: none;
  }

  nav a.active {
    text-decoration: none;
    border-bottom-color: var(--accent);
  }
  .social-links,
  .social-links a {
    display: flex;
  }
  @media (max-width: 720px) {
    .social-links {
      display: none;
    }
  }
</style>
